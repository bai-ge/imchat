<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/linear_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="@drawable/selector_card_bg"
        android:src="@drawable/selector_file_list_bottom_menu"
        android:layout_marginTop="@dimen/fab_margin"
        android:orientation="horizontal">
        <!--文件图标-->
        <LinearLayout
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_gravity="center">

            <com.baige.view.CircleImageView
                android:id="@+id/img_user"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_margin="5dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/head_img"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/layout_btn"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_alignParentEnd="true">
                <TextView
                    android:id="@+id/txt_inform"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textColor="@color/red"
                    android:paddingRight="8dp"
                    android:text="好友请求"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toStartOf="@id/layout_btn"
                android:gravity="center"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txt_friend_alias"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:maxLength="25"
                    android:ellipsize="middle"
                    android:textSize="18sp"
                    android:minLines="1"
                    android:text="@string/friend_alias"
                    android:textColor="@color/text_color_black"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/txt_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:maxLength="25"
                        android:minLines="1"
                        android:text="@string/user_name"
                        android:ellipsize="middle"
                        android:textColor="@color/grass_dark"/>
                    <TextView
                        android:id="@+id/txt_user_alias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/fab_margin"
                        android:gravity="left"
                        android:maxLength="16"
                        android:minLines="1"
                        android:text="(别名)"
                        android:ellipsize="middle"
                        android:textColor="@color/grass_dark"/>
                </LinearLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>